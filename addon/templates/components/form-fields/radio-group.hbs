{{#form-field propertyName
    class="radio-group"
    object=object
    form=form
    label=label as |f|}}
    {{form-label f.labelText required=required tagName="legend"}}

    <ul>
      {{#each options as |option|}}
        {{form-fields/radio-field propertyName option
            tagName="li"
            object=object
            update=(action update)
        }}
      {{/each}}
    </ul>

    {{f.errors}}
    {{f.hint}}
{{/form-field}}
