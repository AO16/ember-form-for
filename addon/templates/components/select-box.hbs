<label for={{identifier}}>{{label}}</label>
<select {{action 'change' on="change"}}
    id={{identifier}}
    multiple={{multiple}}>
  {{#if includeBlank}}
    <option value="">{{promptText}}</option>
  {{/if}}
  {{#if groupLabelPath}}
    {{#each optionGroups as |optionGroup|}}
      <optgroup label={{optionGroup.groupName}}>
        {{#each optionGroup.options as |option|}}
          {{select-box-option
              option=option
              object=object
              propertyName=propertyName
              optionValuePath=optionValuePath
              optionLabelPath=optionLabelPath}}
        {{/each}}
      </optgroup>
    {{/each}}
  {{else}}
    {{#each options as |option|}}
      {{select-box-option
          option=option
          object=object
          propertyName=propertyName
          optionValuePath=optionValuePath
          optionLabelPath=optionLabelPath}}
    {{/each}}
  {{/if}}
</select>
